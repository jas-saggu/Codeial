<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/footer.css">
        <%- style %>
    </head>
    <body>
        <%- include("_header"); %>

        <!-- if there is a success and if there is a message for that -->
        <% if(flash.success && flash.success.length>0){ %>
            <h5>
                <%= flash.success %>
            </h5>
        <%}%>    

        <main>
            <%- body %>
        </main>
        
        <%- include("_footer"); %>

        <%- script %>
    </body>
</html>